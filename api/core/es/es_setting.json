          "type": "text",
          "analyzer":"whitespace",
          "store":"true"
        },
        "year": {
          "type": "date",
          "format": "yyyy"
        },
        "type": {
          "type": "text"
        },
        "star": {
          "type": "float"
        },
        "director": {
          "type": "keyword"
        },
        "user_id":  {
          "type": "keyword"
        }
      }

  }
}
